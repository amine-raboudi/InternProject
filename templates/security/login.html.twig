
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container">
    <div class="row"style=" border-radius: 10px ;background-color: rgb(245, 247, 248); margin-top: 50px;margin-left: 50px;box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 4px, rgba(0, 0, 0, 0.3) 0px 7px 13px -3px, rgba(0, 0, 0, 0.2) 0px -3px 0px inset;">
       
            <div class="col-sm" style="margin-top: 20px;margin-left:20px;margin-bottom:20px;border: 1px solid gray; border-radius: 5px">
                <div style="margin-top: 10px;">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                    
                        <h1 class="h3 mb-3 font-weight-normal" style="margin-top: 30px;">Please Sign In</h1>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    
                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html
                            #}
                            
                           
                            <div class="container">
                                <div class="row" style="margin-top: 20px;margin-left:10%;margin-bottom:10px;">
                                  <div class="col-sm">
                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                    
                                  </div>
                                  <div class="col-sm">
                                    <a href="{{ path('app_forgot_password_request') }}">Forgot password?
                                    </a>
                                  </div>
                                  
                                </div>
                              </div>
                    
                        <button class="btn btn-lg btn-primary" type="submit" style="margin-top: 10px;margin-left:35%;margin-bottom:10px;">
                            Sign in
                        </button>
                        <p style="margin-top: 5px;margin-left:30%;margin-bottom:20px;">Not a member? <a href="{{ path('app_client_register') }}">Register</a></p>
                        <p style="margin-top: 5px;margin-left:30%;margin-bottom:20px;">As an Agency? <a href="{{ path('app_agent_register') }}">Register</a></p>

                        <p style="margin-top: 5px;margin-left:35%;margin-bottom:20px;">or sign up with:</p>
                        <button class="btn">
                            <i class="fa fa-google"style="margin-top: 5px;margin-left:300%;margin-bottom:20px;font-size: 50px;"></i>
                        </button>
                            <button class="btn">
                                <i class="fa fa-google"style="margin-top: 5px;margin-left:300%;margin-bottom:20px;font-size: 50px;"></i>
                            </button>
                                <button class="btn">
                                    <i class="fa fa-google"style="margin-top: 5px;margin-left:300%;margin-bottom:20px;font-size: 50px;"></i>
                                </button>
                        
                    </form>
                </div>
            </div>
            <div class="col-sm" style="margin-top: 20px;margin-bottom:10px;>
                <div style="margin-top: 20px;">
                    <img src="{{ asset('signin.png') }} "style="margin-top:25px;width:110%;margin-right:50px;margin-bottom:20px;"">                  
                </div>
                
                
            </div>
            
        </div>
    
</div>

{% endblock %}

